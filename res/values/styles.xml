<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>        
    </style>

    <style name="ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    
    <style name="ActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    
    <style name="Activity">
        <item name="android:background">@color/background</item>
    </style>
    
    <style name="Card">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="TextButton" parent ="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/text_button</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
    </style>

    <color name="background">#E8E1E7</color>
    <color name="card">#FFFFFF</color>
    <color name="card_border_light">#E8E8E8</color>

    <color name="text">#5C5C5C</color>
    <color name="actionbar_text">#FAFAFA</color>
    
    <color name="primary">#E0A6C6</color>
    <color name="primary_dark">#C47AA3</color>
    <color name="accent">#E0A6C6</color>
    
    <color name="post_it">#FFFED1</color>
    
    <color name="my_message">#E0A6C6</color>
    <color name="message">#D1D2D4</color>
    
    <color name="background_green">#dcedc8</color>
    <color name="secondary_text_gray">#9E9E9E</color>
    <color name="primary_text_gray">#212121</color>
    
</resources>
