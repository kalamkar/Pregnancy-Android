<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/text</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
    </style>
    
    <style name="ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
    </style>
    <style name="ActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    <style name="ActionBarTabText"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    
    <style name="Activity">
        <item name="android:background">@color/background</item>
    </style>
    
    <style name="Card">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>
    
    <color name="background">#EDEDED</color>
    <color name="card">#F5F5F5</color>
    <color name="card_border">#E0E0E0</color>
    <color name="actionbar_background">#560D80</color>

    <color name="text">#5C5C5C</color>
    <color name="actionbar_text">#FAFAFA</color>
    
    <color name="my_message">#CFC8FA</color>
    <color name="message">#E8C8FA</color>
    
</resources>
