<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="care.dovetail.MainActivity" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/photo_width"
            android:layout_height="@dimen/photo_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/secondary_text_light" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email"
            android:layout_alignTop="@+id/name"
            android:layout_toLeftOf="@+id/name"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/email"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/homeIcon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/homeIcon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/homeIcon"
            android:gravity="center_vertical"
            android:text="@string/home"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/sharingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/homeIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_group" />

        <TextView
            android:id="@+id/sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sharingIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sharingIcon"
            android:layout_toRightOf="@+id/sharingIcon"
            android:gravity="center_vertical"
            android:text="@string/sharing"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/historyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sharingIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_history" />

        <TextView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/historyIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/historyIcon"
            android:layout_toRightOf="@+id/historyIcon"
            android:gravity="center_vertical"
            android:text="@string/history"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/dueDateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/historyIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_date" />

        <TextView
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dueDateIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dueDateIcon"
            android:layout_toRightOf="@+id/dueDateIcon"
            android:gravity="center_vertical"
            android:text="@string/due_date"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <ImageView
            android:id="@+id/fitIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dueDateIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_heart" />

        <TextView
            android:id="@+id/pairFit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fitIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fitIcon"
            android:layout_toRightOf="@+id/fitIcon"
            android:gravity="center_vertical"
            android:text="@string/pair_google_fit"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/scaleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fitIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_action_pair" />

        <TextView
            android:id="@+id/pairScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/scaleIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/scaleIcon"
            android:layout_toRightOf="@+id/scaleIcon"
            android:gravity="center_vertical"
            android:text="@string/pair_scale"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/aboutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/scaleIcon"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_info" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/aboutIcon"
            android:layout_alignLeft="@+id/home"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/aboutIcon"
            android:layout_toRightOf="@+id/aboutIcon"
            android:gravity="center_vertical"
            android:text="@string/about"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</ScrollView>
